
<div class="card col-sm-8 mx-auto mt-5">
  <div class="card-body">
    <%= form_with model: @post,local: true do |f| %>
      <div class="form-group">
        <%= f.label :select_id,"使用キャラ", :class => "form-label" %>
        <%= f.collection_select(:select_id, Select.all, :id, :name, {}, {class:"form-control vs_form"}) %>
      </div>
      <div class="form-group">
        <%= f.label :vs_soldier_id,"剣士", :class => "form-label" %>
        <%= f.collection_select(:vs_soldier_id, VsSoldier.all, :id, :name, {}, {class:"form-control vs_form"}) %>
      </div>
      <div class="form-group">
        <%= f.label :vs_wizard_id,"魔法使い", :class => "form-label" %>
        <%= f.collection_select(:vs_wizard_id, VsWizard.all, :id, :name, {}, {class:"form-control vs_form"}) %>
      </div>
      <div class="form-group">
        <%= f.label :vs_monk_id,"僧侶", :class => "form-label" %>
        <%= f.collection_select(:vs_monk_id, VsMonk.all, :id, :name, {}, {class:"form-control vs_form"}) %>
      </div>
      <div class="form-group">
        <%= f.label :vs_fighter_id,"格闘家", :class => "form-label" %>
        <%= f.collection_select(:vs_fighter_id, VsFighter.all, :id, :name, {}, {class:"form-control vs_form"}) %>
      </div>
      <div class="form-group">
        <%= f.label :vs_gunner_id,"銃使い", :class => "form-label" %>
        <%= f.collection_select(:vs_gunner_id, VsGunner.all, :id, :name, {}, {class:"form-control vs_form"}) %>
        </div>
        <div class="form-group">
        <%= f.submit "送信" ,class:"btn btn-secondary dropdown-toggle btn-lg" %>
        <%= render 'layouts/error_messages', model: f.object %>
        </div>
    <% end %>
  </div>
</div>